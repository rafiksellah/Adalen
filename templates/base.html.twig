<!DOCTYPE html>
<html lang="{{ app.request.locale }}" dir="{% if app.request.locale == 'ar' %}rtl{% else %}ltr{% endif %}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}{{ 'home.title'|trans }}{% endblock %}</title>
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- Favicon -->
    <link rel="icon" type="image/png" href="{{ asset('assets/img/favicon-96x96.png') }}" sizes="96x96">
    <link rel="icon" type="image/svg+xml" href="{{ asset('assets/img/favicon.svg') }}">
    <link rel="shortcut icon" href="{{ asset('assets/img/favicon.ico') }}">
    <link rel="apple-touch-icon" sizes="180x180" href="{{ asset('assets/img/apple-touch-icon.png') }}">
    <link rel="manifest" href="{{ asset('assets/img/site.webmanifest') }}">
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Nunito:wght@300;400;600;700&display=swap" rel="stylesheet">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="{{ asset('assets/css/adalen.css') }}">
    
    {% block stylesheets %}{% endblock %}
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white fixed-top">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" href="{{ path('app_home') }}">
                <img src="{{ asset('assets/img/logo.png') }}" alt="Adalen" height="110" class="logo-img">
                <span class="brand-text">ADALEN</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-center">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_home', {_locale: app.request.locale}) }}">{{ 'app.actualite'|trans }}</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_activities', {_locale: app.request.locale}) }}">{{ 'app.activities'|trans }}</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_animators', {_locale: app.request.locale}) }}">{{ 'app.animators'|trans }}</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_coop', {_locale: app.request.locale}) }}">{{ 'app.coop'|trans }}</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_contact', {_locale: app.request.locale}) }}">{{ 'app.contact'|trans }}</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_recrutement', {_locale: app.request.locale}) }}">{{ 'app.recruitment'|trans }}</a>
                    </li>
                    <li class="nav-item">
                        <a href="https://montessori-algeria.com/" target="_blank" class="nav-link nav-link-external d-flex align-items-center" title="{{ 'app.montessori'|trans }}">
                            <img src="{{ asset('assets/img/montessori_principale.png') }}" alt="Montessori Algerie" style="width: 15px; height: 31px; margin-right: 0.5rem;" class="me-2">
                        </a>
                    </li>
                    <li class="nav-item dropdown ms-2">
                        <a class="nav-link dropdown-toggle" href="#" id="languageDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-globe me-1"></i>
                            {% if app.request.locale == 'en' %}EN
                            {% elseif app.request.locale == 'fr' %}FR
                            {% elseif app.request.locale == 'ar' %}AR
                            {% endif %}
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="languageDropdown">
                            {% if app.request.locale != 'en' %}
                            <li><a class="dropdown-item" href="{{ path('app_change_locale', {locale: 'en'}) }}">English</a></li>
                            {% endif %}
                            {% if app.request.locale != 'fr' %}
                            <li><a class="dropdown-item" href="{{ path('app_change_locale', {locale: 'fr'}) }}">Français</a></li>
                            {% endif %}
                            {% if app.request.locale != 'ar' %}
                            <li><a class="dropdown-item" href="{{ path('app_change_locale', {locale: 'ar'}) }}">العربية</a></li>
                            {% endif %}
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    {% block body %}{% endblock %}

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-4">
                    <h5>{{ 'footer.title'|trans }}</h5>
                    <p>{{ 'footer.description'|trans }}</p>
                </div>
                <div class="col-md-4 mb-4">
                    <h5>{{ 'footer.quick_links'|trans }}</h5>
                    <ul class="list-unstyled">
                        <li><a href="{{ path('app_home', {_locale: app.request.locale}) }}">{{ 'app.actualite'|trans }}</a></li>
                        <li><a href="{{ path('app_activities', {_locale: app.request.locale}) }}">{{ 'app.activities'|trans }}</a></li>
                        <li><a href="{{ path('app_animators', {_locale: app.request.locale}) }}">{{ 'app.animators'|trans }}</a></li>
                        <li><a href="{{ path('app_coop', {_locale: app.request.locale}) }}">{{ 'app.coop'|trans }}</a></li>
                        <li><a href="{{ path('app_contact', {_locale: app.request.locale}) }}">{{ 'app.contact'|trans }}</a></li>
                        <li><a href="{{ path('app_recrutement', {_locale: app.request.locale}) }}">{{ 'app.recruitment'|trans }}</a></li>
                    </ul>
                </div>
                <div class="col-md-4 mb-4">
                    <h5>{{ 'footer.contact_title'|trans }}</h5>
                    <p><i class="fas fa-map-marker-alt"></i> {{ 'contact.address'|trans }}</p>
                    <p><i class="fas fa-phone"></i> {{ 'contact.phone'|trans }}</p>
                    <p><i class="fas fa-envelope"></i> {{ 'contact.email'|trans }}</p>
                </div>
            </div>
            <hr>
            <div class="text-center">
                <p>&copy; {{ 'now'|date('Y') }} {{ 'footer.title'|trans }}. {{ 'footer.rights'|trans }}</p>
            </div>
        </div>
    </footer>

    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Custom JS -->
    <script src="{{ asset('assets/js/adalen.js') }}"></script>
    
    {% block javascripts %}{% endblock %}
</body>
</html>


