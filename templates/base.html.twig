<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Adalen - Centre d'Activités Extra-Scolaires pour Enfants{% endblock %}</title>
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Nunito:wght@300;400;600;700&display=swap" rel="stylesheet">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="{{ asset('assets/css/adalen.css') }}">
    
    {% block stylesheets %}{% endblock %}
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white fixed-top">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" href="{{ path('app_home') }}">
                <img src="{{ asset('assets/img/logo.png') }}" alt="Adalen" height="70">
                <span class="brand-text">ADALEN</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_home') }}">Accueil</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_activities') }}">Activités</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_animators') }}">Animateurs</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_coop') }}">La Petite COOP</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_contact') }}">Contact</a>
                    </li>
                    <a href="https://montessori-algeria.com/" target="_blank" class="nav-link nav-link-external" title="Aller au site Montessori">
                            <i class="fas fa-home me-2"></i>Montessori
                    </a>
                </ul>
            </div>
        </div>
    </nav>

    {% block body %}{% endblock %}

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-4">
                    <h5>Adalen</h5>
                    <p>Centre d'activités extra-scolaires pour enfants</p>
                </div>
                <div class="col-md-4 mb-4">
                    <h5>Liens rapides</h5>
                    <ul class="list-unstyled">
                        <li><a href="{{ path('app_home') }}">Accueil</a></li>
                        <li><a href="{{ path('app_activities') }}">Activités</a></li>
                        <li><a href="{{ path('app_animators') }}">Animateurs</a></li>
                        <li><a href="{{ path('app_coop') }}">La Petite COOP</a></li>
                        <li><a href="{{ path('app_contact') }}">Contact</a></li>
                    </ul>
                </div>
                <div class="col-md-4 mb-4">
                    <h5>Contact</h5>
                    <p><i class="fas fa-map-marker-alt"></i> Alger, Algérie</p>
                    <p><i class="fas fa-phone"></i> +213 563 000 507</p>
                    <p><i class="fas fa-envelope"></i> contact@adalen-dz.com</p>
                </div>
            </div>
            <hr>
            <div class="text-center">
                <p>&copy; {{ 'now'|date('Y') }} Adalen. Tous droits réservés.</p>
            </div>
        </div>
    </footer>

    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Custom JS -->
    <script src="{{ asset('assets/js/adalen.js') }}"></script>
    
    {% block javascripts %}{% endblock %}
</body>
</html>


