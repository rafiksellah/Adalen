{% extends 'base.html.twig' %}

{% block title %}{{ 'contact.title'|trans }}{% endblock %}

{% block body %}
    <section class="py-5" style="padding: 6rem 0;">
        <div class="container">
            <h2 class="section-title fade-in">{{ 'contact.page_title'|trans }}</h2>
            <p class="section-subtitle fade-in">{{ 'contact.subtitle'|trans }}</p>
            
            <div class="row">
                <div class="col-lg-6 mb-4 fade-in-left">
                    <div class="activity-card p-4 slide-up">
                        <h3 class="mb-4">{{ 'contact.send_message'|trans }}</h3>
                        <form>
                            <div class="mb-3">
                                <input type="text" class="form-control" placeholder="{{ 'contact.your_name'|trans }}" required>
                            </div>
                            <div class="mb-3">
                                <input type="email" class="form-control" placeholder="{{ 'contact.your_email'|trans }}" required>
                            </div>
                            <div class="mb-3">
                                <input type="text" class="form-control" placeholder="{{ 'contact.subject'|trans }}" required>
                            </div>
                            <div class="mb-3">
                                <textarea class="form-control" rows="5" placeholder="{{ 'contact.your_message'|trans }}" required></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary">{{ 'contact.send'|trans }}</button>
                        </form>
                    </div>
                </div>
                <div class="col-lg-6 fade-in-right">
                    <div class="activity-card scale-in">
                        <iframe 
                            src="https://www.google.com/maps?q=36.7419698,3.0412781&hl=fr&z=17&output=embed" 
                            width="100%" 
                            height="450" 
                            style="border:0;" 
                            allowfullscreen="" 
                            loading="lazy"
                            referrerpolicy="no-referrer-when-downgrade">
                        </iframe>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

