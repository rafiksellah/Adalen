{% extends 'admin/base.html.twig' %}

{% block title %}Contacts - Admin Adalen{% endblock %}

{% block page_title %}Messages de contact{% endblock %}

{% block body %}
<div class="contacts-container">
    <div class="card shadow-sm">
        <div class="card-header bg-white">
            <h5 class="mb-0">
                <i class="fas fa-envelope me-2"></i>
                Liste des messages ({{ contacts|length }})
            </h5>
        </div>
        <div class="card-body">
            {% if contacts|length > 0 %}
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nom</th>
                            <th>Email</th>
                            <th>Sujet</th>
                            <th>Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for contact in contacts %}
                        <tr>
                            <td>#{{ contact.id }}</td>
                            <td>{{ contact.nom }}</td>
                            <td>{{ contact.email }}</td>
                            <td>{{ contact.sujet }}</td>
                            <td>{{ contact.createdAt|date('d/m/Y H:i') }}</td>
                            <td>
                                <button class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-eye"></i>
                                    Voir
                                </button>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            {% else %}
            <div class="text-center py-5">
                <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                <p class="text-muted">Aucun message pour le moment</p>
                <p class="text-muted small">Les messages de contact apparaîtront ici une fois l'entité ContactMessage créée</p>
            </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
