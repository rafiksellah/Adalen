{% extends 'admin/base.html.twig' %}

{% block title %}Nouvelle Activité - Admin Adalen{% endblock %}

{% block page_title %}Nouvelle Activité{% endblock %}

{% block body %}
<div class="activity-form-container">
    <div class="mb-3">
        <a href="{{ path('app_admin_activity_index') }}" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>
            Retour à la liste
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-white">
            <h5 class="mb-0">
                <i class="fas fa-plus-circle me-2"></i>
                Créer une nouvelle activité
            </h5>
        </div>
        <div class="card-body">
            {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': true}}) }}
                <div class="row">
                    <div class="col-md-12 mb-3">
                        {{ form_row(form.name) }}
                    </div>
                    <div class="col-md-12 mb-3">
                        {{ form_row(form.description) }}
                    </div>
                    <div class="col-md-6 mb-3">
                        {{ form_row(form.icon) }}
                    </div>
                    <div class="col-md-6 mb-3">
                        {{ form_row(form.ageRange) }}
                    </div>
                    <div class="col-md-4 mb-3">
                        {{ form_row(form.price) }}
                    </div>
                    <div class="col-md-4 mb-3">
                        {{ form_row(form.numberOfClasses) }}
                    </div>
                    <div class="col-md-4 mb-3">
                        {{ form_row(form.duration) }}
                    </div>
                    <div class="col-md-12 mb-3">
                        {{ form_row(form.image) }}
                    </div>
                    <div class="col-md-12 mb-3">
                        <div class="form-check">
                            {{ form_widget(form.isActive) }}
                            {{ form_label(form.isActive) }}
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-end gap-2">
                    <a href="{{ path('app_admin_activity_index') }}" class="btn btn-secondary">
                        Annuler
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>
                        Enregistrer
                    </button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
