<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Dashboard Admin - Adalen{% endblock %}</title>
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Custom Admin CSS -->
    <link rel="stylesheet" href="{{ asset('assets/css/admin.css') }}">
    
    {% block stylesheets %}{% endblock %}
</head>
<body>
    <div class="admin-wrapper">
        <!-- Sidebar -->
        <aside class="admin-sidebar">
            <div class="sidebar-header">
                <h3 class="sidebar-title">
                    <i class="fas fa-shield-alt me-2"></i>
                    Admin Adalen
                </h3>
            </div>
            
            <nav class="sidebar-nav">
                <ul class="nav-list">
                    <li class="nav-item">
                        <a href="{{ path('app_admin_dashboard') }}" class="nav-link {% if app.request.get('_route') == 'app_admin_dashboard' %}active{% endif %}">
                            <i class="fas fa-tachometer-alt"></i>
                            <span>Dashboard</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="{{ path('app_admin_actuality_index') }}" class="nav-link {% if 'app_admin_actuality' in app.request.get('_route') %}active{% endif %}">
                            <i class="fas fa-newspaper"></i>
                            <span>Actualités</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="{{ path('app_admin_activity_index') }}" class="nav-link {% if 'app_admin_activity' in app.request.get('_route') %}active{% endif %}">
                            <i class="fas fa-clipboard-list"></i>
                            <span>Activités</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="{{ path('app_admin_animator_index') }}" class="nav-link {% if 'app_admin_animator' in app.request.get('_route') %}active{% endif %}">
                            <i class="fas fa-users"></i>
                            <span>Animateurs</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="{{ path('app_admin_candidatures') }}" class="nav-link {% if 'app_admin_candidature' in app.request.get('_route') %}active{% endif %}">
                            <i class="fas fa-user-tie"></i>
                            <span>Candidatures</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="{{ path('app_admin_contacts') }}" class="nav-link {% if app.request.get('_route') == 'app_admin_contacts' %}active{% endif %}">
                            <i class="fas fa-envelope"></i>
                            <span>Contacts</span>
                        </a>
                    </li>
                </ul>
            </nav>
            
            <div class="sidebar-footer">
                <a href="{{ path('app_home', {_locale: 'fr'}) }}" class="btn btn-sm btn-outline-light w-100">
                    <i class="fas fa-arrow-left me-2"></i>
                    Retour au site
                </a>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="admin-main">
            <!-- Top Bar -->
            <header class="admin-header">
                <div class="header-content">
                    <h1 class="page-title">{% block page_title %}Dashboard{% endblock %}</h1>
                    <div class="header-actions">
                        <span class="user-info me-3">
                            <i class="fas fa-user-circle me-2"></i>
                            {{ app.user.email }}
                        </span>
                        <a href="{{ path('app_logout') }}" class="btn btn-sm btn-outline-danger">
                            <i class="fas fa-sign-out-alt me-2"></i>
                            Déconnexion
                        </a>
                    </div>
                </div>
            </header>

            <!-- Content Area -->
            <div class="admin-content">
                {% block body %}{% endblock %}
            </div>
        </main>
    </div>

    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    {% block javascripts %}{% endblock %}
</body>
</html>
