{% extends 'admin/base.html.twig' %}

{% block title %}Animateurs - Admin Adalen{% endblock %}

{% block page_title %}Gestion des Animateurs{% endblock %}

{% block body %}
<div class="animator-container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Liste des animateurs ({{ animators|length }})</h2>
        <a href="{{ path('app_admin_animator_new') }}" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>
            Nouvel animateur
        </a>
    </div>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    {% if animators|length > 0 %}
    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nom</th>
                            <th>Titre</th>
                            <th>Catégorie</th>
                            <th>Statut</th>
                            <th>Date création</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for animator in animators %}
                        <tr>
                            <td>#{{ animator.id }}</td>
                            <td><strong>{{ animator.name }}</strong></td>
                            <td>{{ animator.title ?? '-' }}</td>
                            <td>
                                {% if animator.category %}
                                    <span class="badge bg-info">{{ animator.category }}</span>
                                {% else %}
                                    <span class="text-muted">-</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if animator.isActive %}
                                    <span class="badge bg-success">Actif</span>
                                {% else %}
                                    <span class="badge bg-secondary">Inactif</span>
                                {% endif %}
                            </td>
                            <td>{{ animator.createdAt|date('d/m/Y') }}</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="{{ path('app_admin_animator_show', {id: animator.id}) }}" class="btn btn-sm btn-outline-info">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="{{ path('app_admin_animator_edit', {id: animator.id}) }}" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form method="post" action="{{ path('app_admin_animator_delete', {id: animator.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet animateur ?');" class="d-inline">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ animator.id) }}">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    {% else %}
    <div class="card shadow-sm">
        <div class="card-body text-center py-5">
            <i class="fas fa-users fa-3x text-muted mb-3"></i>
            <p class="text-muted">Aucun animateur enregistré</p>
            <a href="{{ path('app_admin_animator_new') }}" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>
                Créer le premier animateur
            </a>
        </div>
    </div>
    {% endif %}
</div>
{% endblock %}
