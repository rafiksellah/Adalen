{% extends 'admin/base.html.twig' %}

{% block title %}Candidatures - Admin Adalen{% endblock %}

{% block page_title %}Candidatures{% endblock %}

{% block body %}
<div class="candidatures-container">
    <div class="card shadow-sm">
        <div class="card-header bg-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">
                <i class="fas fa-user-tie me-2"></i>
                Liste des candidatures ({{ candidatures|length }})
            </h5>
        </div>
        <div class="card-body">
            {% if candidatures|length > 0 %}
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nom complet</th>
                            <th>Email</th>
                            <th>Téléphone</th>
                            <th>Poste souhaité</th>
                            <th>Date de candidature</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for candidature in candidatures %}
                        <tr>
                            <td>#{{ candidature.id }}</td>
                            <td>
                                <strong>{{ candidature.prenom }} {{ candidature.nom }}</strong>
                            </td>
                            <td>{{ candidature.email }}</td>
                            <td>{{ candidature.telephone }}</td>
                            <td>
                                <span class="badge bg-primary">{{ candidature.posteSouhaite }}</span>
                            </td>
                            <td>{{ candidature.createdAt|date('d/m/Y H:i') }}</td>
                            <td>
                                <a href="{{ path('app_admin_candidature_show', {id: candidature.id}) }}" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-eye"></i>
                                    Détails
                                </a>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            {% else %}
            <div class="text-center py-5">
                <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                <p class="text-muted">Aucune candidature enregistrée</p>
            </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
