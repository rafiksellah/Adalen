{% extends 'base.html.twig' %}

{% block title %}Nos Activit√©s - Adalen{% endblock %}

{% block body %}
    <!-- Page Header -->
    <section class="hero-section py-4" style="padding: 60px 0;">
        <div class="container">
            <div class="text-center text-white">
                <h1 class="display-4 fw-bold mb-3">Nos Activit√©s</h1>
                <p class="lead">D√©couvrez toutes nos activit√©s extra-scolaires pour enfants</p>
            </div>
        </div>
    </section>

    <!-- Activities Grid -->
    <section class="py-5">
        <div class="container">
            {% if activities|length > 0 %}
                <div class="row g-4">
                    {% for activity in activities %}
                        <div class="col-md-6 col-lg-4">
                            <div class="card h-100">
                                {% if activity.image %}
                                    <img src="{{ asset('assets/img/' ~ activity.image) }}" class="card-img-top" alt="{{ activity.name }}">
                                {% else %}
                                    <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                        <span style="font-size: 4rem;">{{ activity.icon|default('üéØ') }}</span>
                                    </div>
                                {% endif %}
                                <div class="card-body">
                                    <h3 class="card-title fw-bold">{{ activity.name }}</h3>
                                    {% if activity.description %}
                                        <p class="card-text text-muted">{{ activity.description|slice(0, 120) }}{% if activity.description|length > 120 %}...{% endif %}</p>
                                    {% endif %}
                                    <div class="mb-3">
                                        {% if activity.ageRange %}
                                            <p class="mb-1"><i class="fas fa-birthday-cake me-2 text-primary"></i><strong>√Çge :</strong> {{ activity.ageRange }}</p>
                                        {% endif %}
                                        {% if activity.numberOfClasses %}
                                            <p class="mb-1"><i class="fas fa-calendar me-2 text-primary"></i><strong>Classes :</strong> {{ activity.numberOfClasses }}</p>
                                        {% endif %}
                                        {% if activity.duration %}
                                            <p class="mb-1"><i class="fas fa-clock me-2 text-primary"></i><strong>Dur√©e :</strong> {{ activity.duration }}</p>
                                        {% endif %}
                                        {% if activity.price %}
                                            <p class="mb-1"><i class="fas fa-dollar-sign me-2 text-primary"></i><strong>Prix :</strong> {{ activity.price }} DA</p>
                                        {% endif %}
                                    </div>
                                </div>
                                <div class="card-footer bg-transparent border-0">
                                    <a href="{{ path('app_activity_register', {id: activity.id}) }}" class="btn btn-primary w-100">
                                        <i class="fas fa-book me-2"></i>Book for Fun Classes
                                    </a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <div class="text-center py-5">
                    <p class="lead text-muted">Aucune activit√© disponible pour le moment.</p>
                </div>
            {% endif %}
        </div>
    </section>
{% endblock %}


