{% extends 'base.html.twig' %}

{% block title %}Inscription - {{ activity.name }} - Adalen{% endblock %}

{% block body %}
    <!-- Page Header -->
    <section class="hero-section py-4" style="padding: 60px 0;">
        <div class="container">
            <div class="text-center text-white">
                <h1 class="display-4 fw-bold mb-3">Inscription</h1>
                <p class="lead">{{ activity.name }}</p>
            </div>
        </div>
    </section>

    <!-- Registration Form -->
    <section class="py-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="card shadow-custom">
                        <div class="card-body p-4">
                            <h2 class="card-title mb-4">Formulaire d'inscription</h2>
                            
                            {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': true}}) }}
                            
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    {{ form_row(form.childName, {'attr': {'class': 'form-control'}}) }}
                                </div>
                                <div class="col-md-6">
                                    {{ form_row(form.parentName, {'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>
                            
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
                                </div>
                                <div class="col-md-6">
                                    {{ form_row(form.phone, {'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>
                            
                            <div class="mb-3">
                                {{ form_row(form.message, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            
                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="fas fa-paper-plane me-2"></i>Envoyer l'inscription
                                </button>
                            </div>
                            
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

