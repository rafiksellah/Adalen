# Protection des fichiers sensibles
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

# Empêcher l'accès direct aux fichiers PHP sensibles
<FilesMatch "^(composer\.(json|lock)|\.env|\.git)">
    Order allow,deny
    Deny from all
</FilesMatch>

# Redirection vers public/
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteCond %{REQUEST_URI} !^/public/
    RewriteRule ^(.*)$ public/$1 [L]
</IfModule>

